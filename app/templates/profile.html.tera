<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="css/style.css"/>
    <!-- <script type="text/javascript" src="./js/search.js"></script>
    <script type="text/javascript" src="./js/champion.js"></script>-->

    <title>ExoBuilds</title>
  </head>
  <body>
    <nav class="navbar fixed-top navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="http://127.0.0.1:8000/"><img src="images/logo2.png" height="50px" alt="Home"></a>
      </div>
    </nav>
    <div class="row" style="margin-top: 4rem;">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="row">
                <div class="col-2" style="margin-top: 4rem;">
                    <img src="http://ddragon.leagueoflegends.com/cdn/12.11.1/img/profileicon/{{ icon }}.png" width="150rem" alt="{{ icon }}">
                </div>
                <div class="col-10" style="margin-top: 6rem;">
                    <h1 style="font-weight:bold">{{ summoner_name }}</h1>
                    <button style="margin-top:1rem" type="button" class="btn btn-primary">Update</button>
                </div>
            </div>
            <div class="row">
                <div class="col-2"></div>
                {% for champ in champs %}
                    <div class="col-3" style="margin-top:3rem;display:flex">
                        <img src="http://ddragon.leagueoflegends.com/cdn/12.11.1/img/champion/{{ champ.0 }}.png" width="30%" alt="{{ champ.0 }}">
                        <span style="margin-top: 1rem;margin-left:1rem"><strong>{{ champ.1 }} games</strong><br><span style="margin-left:1rem">{{ champ.2 }}%</span></span>
                    </div>
                {% endfor %}
                <div class="col-1"></div>
            </div>
        {# DEBUT BOUCLE FOR #}
        {% for array in arrays %}
            <div class="row">
                <div class="col-1"></div>
                <div class="col-9" style="margin-top:2rem">
                    <div class="accordion">
                        <div class="accordion-item">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ array.data.match_id }}" aria-expanded="false" aria-controls="collapse{{ array.data.match_id }}">
                                {% if array.player_champion.win == true %}
                                <span style="margin-left: 3rem;font-weight:bold;color:green">W</span>
                                {% else %}
                                <span style="margin-left: 3rem;font-weight:bold;color:red">L</span>
                                {% endif %}
                                <img src="http://ddragon.leagueoflegends.com/cdn/12.11.1/img/champion/{{ array.player_champion.champion_name }}.png" width="5%" alt="{{ array.player_champion.champion_name }}" style="margin-left: 3rem;">
                                <span style="margin-left: 3rem;font-weight:bold">{{ array.player_champion.kills }}/{{ array.player_champion.deaths }}/{{ array.player_champion.assists }}</span>
                                <span style="margin-left: 3rem;font-weight:bold">{{ array.player_champion.minions_killed }} cs</span>
                                <span style="margin-left: 3rem;font-weight:bold;text-align:end">{{ ((array.data.match_duration / 60)) }} mins</span>
                            </button>
                            </h2>
                            <div id="collapse{{ array.data.match_id }}" class="accordion-collapse collapse" aria-labelledby="heading{{ array.data.match_id }}" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div class="row">
                                        {% for j in [1,2] %}
                                        <div class="col-6" style="color: black;">
                                            {% for a in [1,2,3,4,5] %}
                                            {% set n = (j * a) - 1 %}
                                            {% set champ = array.data.champions[n] %}
                                            <div>
                                                <img src="http://ddragon.leagueoflegends.com/cdn/12.11.1/img/champion/{{ champ.champion_name }}.png" width="5%" alt="{{ champ.champion_name }}" style="margin-left: 3rem;">
                                                <span style="margin-left: 3rem">{{ champ.kills }}/{{ champ.deaths }}/{{ champ.assists }}</span>
                                            </div>
                                            {% endfor %}
                                        </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>                      
                </div>
                <div class="col-1"></div>
            </div>
        {% endfor %}
        {# FIN BOUCLE FOR #}
        </div>
        <div class="col-2"></div>
    </div>
  </body>
</html>